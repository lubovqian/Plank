/**index.wxss**/
Page{
  background:#fff;
}
/*时间显示样式*/
.timeStyle{
  display: flex;
  flex-direction: row;
  height: 800rpx;
  align-items: center;
  position: relative;

}
.time{
  position: absolute;
  padding-left:84rpx;
  color:#f7bd10;
}
.svgClock1{
  position: absolute;
  padding-left: 20rpx;
}
/*按钮样式*/
.btnAll{
  display: flex;
  flex-direction:row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  padding-top: 200rpx;
 
}

.btnVideo,.btnRecord{
  position: relative;
  width: 96rpx;
  height:96rpx;
  border-radius: 100%;

}

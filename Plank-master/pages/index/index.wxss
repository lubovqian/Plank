.show_button{
  transform: translateY(0);
  transition: 0.3s
}
.hide_button{
  transform: translateY(240rpx);
  transition: 0.3s
}
.videoStyle{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 600rpx;
}
.videoPic{
  width: 100%;
}
.videoTitle{
  padding-left: 20rpx;
  font-size:36rpx;
}

.show_video{
  transform: translateY(0);
  transition: 0.4s;
  transform-style: ease;
}
.hide_video{
  transform: translateY(-600rpx);
  transition: 0.4s;
  transform-style: ease;
}
.show_title{
   opacity: 1;
   transition: 0.3s;
   transition-delay: 0.3s;
   transform-style: ease;
}
.hide_title{  
   opacity: 0;
   transition: 0.3s;
   transform-style: ease;
}
.moveDown{
  transform: translateY(0);
  transition: 0.3s
}
.moveUp{
  transform: translateY(400rpx);
  transition: 0.3s
}
.show_time{
   opacity: 1;
   transition: 0.3s;
   transform-style: ease;
}

.hide_time{
   opacity: 0;
   transition: 0.3s;
   transform-style: ease;
}